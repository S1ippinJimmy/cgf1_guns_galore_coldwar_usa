		<label>M26 Frag Grenade</label>
		<description>An American Cold War-era fragmentation grenade.</description>
		<graphicData>
			<texPath>CGF1/Gun/M26_Frag</texPath>
			<drawSize>0.75</drawSize>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.3</uiIconScale>
		<recipeMaker>
			<recipeUsers>
				<li>CGF1_MWP_Building_Gunsmith</li>
			</recipeUsers>
			<researchPrerequisite>CGF1_MWP_Research_T8_AtomicAgeFirearms</researchPrerequisite>
		</recipeMaker>
		<tickerType>Normal</tickerType>
		<techLevel>Industrial</techLevel>
		<soundInteract>Interact_Grenade</soundInteract>
