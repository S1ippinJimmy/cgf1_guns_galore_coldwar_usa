<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <ThingDef ParentName="BuildingBase">
    <defName>CGF1_MWP_Turret_Mk19_Mod3_</defName>
    <label>Mk.19 Mod 3</label>
    <description>A stationary automatic grenade launcher.</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>CGF1/Building/M2HB_Base</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.27,0.25,0.27)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <uiIconPath>CGF1/Building/Mk19_Mod3/Mk19_Mod3_MenuIcon</uiIconPath>
    <uiIconScale>0.90</uiIconScale>
	<minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
	<thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <costList>
      <Steel>35</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
	  <CGF1_MWP_Mk19_Mod3_>1</CGF1_MWP_Mk19_Mod3_>
    </costList>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToBuild>5000</WorkToBuild>
	  <Mass>50</Mass>
      <Beauty>-20</Beauty>
      <ShootingAccuracyTurret>0.97</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <passability>PassThroughOnly</passability>
    <pathCost>40</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <designationCategory>CGF1_MWP_Category_GunsGalore</designationCategory>
	<designatorDropdown>CGF1_MWP_Dropdown_Mk19</designatorDropdown>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>CGF1_MWP_TurretGun_Mk19_Mod3_</turretGunDef>
      <turretBurstCooldownTime>2.6</turretBurstCooldownTime>
      <turretBurstWarmupTime>2.4</turretBurstWarmupTime>
	  <turretTopOffset>(0.01,0.2)</turretTopOffset>
	  <turretTopDrawSize>1.5</turretTopDrawSize>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>CGF1_MWP_Research_T9_SpaceAgeEmplacements</li>
    </researchPrerequisites>
	<tradeTags>
			<li>CGF1_GunsGalore_ColdWarUSA_Turret</li>
		</tradeTags>
  </ThingDef>
  
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>CGF1_MWP_TurretGun_Mk19_Mod3_</defName>
    <label>Mk.19 Mod 3</label>
    <description>A mounted variant of the Mk.19 Mod 3 grenade launcher.</description>
    <graphicData>
      <texPath>CGF1/Building/Mk19_Mod3/Mk19_Mod3</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>3.2</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>35.2</Mass>
      <Flammability>0</Flammability>
    </statBases>
    <weaponTags Inherit="false">
      <li>TurretGun</li>
    </weaponTags>
    <verbs>
      <li>
			<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>CGF1_MWP_Bullet_40x53mm_Grenade</defaultProjectile>
				<warmupTime>3</warmupTime>
				<range>30.9</range>
				<burstShotCount>6</burstShotCount>
				<ticksBetweenBurstShots>30</ticksBetweenBurstShots>
				<soundCast>CGF1_MWP_SFX_GrenadeLauncher2</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<onlyManualCast>true</onlyManualCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<forcedMissRadius>1.9</forcedMissRadius>
      </li>
    </verbs>
	<modExtensions>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="issaczhuang.muzzleflash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(1.0,1.0)</drawSize>
				<offsets>
					<li>(0.82,0.01)</li>
				</offsets>
			</li>
	</modExtensions>
  </ThingDef>
</Defs>